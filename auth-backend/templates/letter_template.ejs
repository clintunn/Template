<!-- server/templates/letter_template.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Official Letter</title>
<style>
    body {
        font-family: Arial, sans-serif;
    }

    .letter-header {
        margin-bottom: 20px;
    }

    .letter-body {
        line-height: 1.5;
    }
</style>
</head>
<body>
<div class="letter-header">
    <p><strong>Date:</strong> <%= date %></p>
    <p><strong>Sender:</strong> <%= sender %></p>
    <p><strong>Recipient:</strong> <%= recipient %></p>
    <p><strong>Subject:</strong> <%= subject %></p>
</div>

<div class="letter-body">
    <p>
        Dear <%= recipient %>,
    </p>
    
    <p>
        We hope this letter finds you well. We are writing to inform you about some important matters.
    </p>
    
    <p>
        Best regards,
        <br>
        <%= sender %>
    </p>
</div>
</body>
</html>
